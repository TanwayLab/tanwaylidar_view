<launch>
	<node pkg="tanwaylidar_view" name="TanwayLidar_MainNode" type="TanwayLidar_MainNode" output = "screen">
		<param name="frame_id" type="string" value="TanwayTP" />
		<param name="topic" type="string" value="/tanwaylidar_pointcloud" />
		<param name="LidarType" type="int" value="6"/> 
		
		<!--本机IP地址-->
		<param name="LocalHost" type="string" value="192.168.111.204" />
		<!--本机接收雷达点云数据的端口号-->
		<param name="LocalPointloudPort" type="int" value="5600" />
		<!--本机接收雷达DIF数据的端口号-->
		<param name="LocalDIFPort" type="int" value="5700" />
		<!--l雷达设备的IP地址-->
		<param name="LidarHost" type="string" value="192.168.111.51" />
		<!--雷达设备发送端的端口号-->
		<param name="LidarPort" type="int" value="5050" />

		

		<!--组修正角度值1-->
		<param name="CorrectedAngle1" type="double" value="-4.438" />		
		<!--组修正角度值2-->
		<param name="CorrectedAngle2" type="double" value="0.0" />	
		<!--组修正角度值3-->
		<param name="CorrectedAngle3" type="double" value="4.431" />	

		<!--左偏移角度[15~45]-->
		<param name="LeftMoveAngle" type="double" value="30.4" />		
		<!--右偏移角度[-15~-45]--> 
		<param name="RightMoveAngle" type="double" value="-30.41" />	

		<!--左偏移量-->
		<param name="CorrectionMovementLX" type="double" value="0.025" />
		<param name="CorrectionMovementLY" type="double" value="0" />		
		<param name="CorrectionMovementLZ" type="double" value="0" />		
		<!--右偏移量--> 
		<param name="CorrectionMovementRX" type="double" value="-0.025" />
		<param name="CorrectionMovementRY" type="double" value="0" />		
		<param name="CorrectionMovementRZ" type="double" value="0" />		
		
	</node>

	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find tanwaylidar_view)/rviz/tanwayrun.rviz" />
</launch>
